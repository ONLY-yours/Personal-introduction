<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">



    <ImageView
        android:id="@+id/login_background"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/circle_blue"
        app:layout_constraintTop_toTopOf="@id/btn_way_login"
        app:layout_constraintLeft_toLeftOf="@id/btn_way_login"
        app:layout_constraintRight_toRightOf="@id/btn_way_login"
        app:layout_constraintBottom_toBottomOf="@id/btn_way_login"/>

    <ImageView
        android:id="@+id/regist_background"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/circle_gray"
        app:layout_constraintTop_toTopOf="@id/btn_way_regist"
        app:layout_constraintLeft_toLeftOf="@id/btn_way_regist"
        app:layout_constraintRight_toRightOf="@id/btn_way_regist"
        app:layout_constraintBottom_toBottomOf="@id/btn_way_regist"/>

    <ImageView
        android:id="@+id/image_login_key"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_keyboard_capslock_24"
        app:layout_constraintTop_toBottomOf="@id/btn_way_login"
        app:layout_constraintLeft_toLeftOf="@id/btn_way_login"
        app:layout_constraintRight_toRightOf="@id/btn_way_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image_regist_key"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_keyboard_capslock_24"
        app:layout_constraintTop_toBottomOf="@id/btn_way_regist"
        app:layout_constraintLeft_toLeftOf="@id/btn_way_regist"
        app:layout_constraintRight_toRightOf="@id/btn_way_regist"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_way_login"
        android:textSize="18sp"
        android:text="Login"
        android:layout_width="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/btn_way_regist"
        android:textSize="18sp"
        android:text="Regist"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"/>



    <androidx.appcompat.widget.AppCompatEditText
        android:hint="账号"
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_password"
        android:hint="账号"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="270dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_varcode"
        android:hint="验证码"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="340dp"/>

    <Button
        android:id="@+id/btn_login"
        android:text="LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>
    
    
</androidx.constraintlayout.widget.ConstraintLayout>